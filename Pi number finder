public class WeLoveMath {
	
	public static void main(String [] args) {
		
		double myPi = 4.0;
		
		double a = 3.0;
		
		//4 - 4/3 + 4/5 -4/7
		
		while(a < 10000000) { 
			
			myPi = myPi - (4/a) + (4/(a+2));
			 a+= 4;
			System.out.println(myPi);
			
		}
		System.out.println("Value of Pi: " + Math.PI);
	}
} 
//simple way of calculating pi and i like how it works out :) 
